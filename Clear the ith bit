// Online C++ compiler to run C++ program online
#include <bits/stdc++.h>
using namespace std;
int clearIthBit(int N, int K)
    {
        // Write Your Code here
        int mask=~(1<<K);
        int ans=(mask & N);
        return ans;
    }
int main() {
    int N=10;
    int K=1;
    cout<<"After clearing "<<K<<" bit new No is: "<<clearIthBit(N,K);

    return 0;
}
